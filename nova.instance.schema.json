{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chrishicks.ca/schemas/nova.instance.schema.json",
  "title": "NOVA Instance Configuration",
  "type": "object",
  "required": [
    "id",
    "version",
    "name",
    "description",
    "quoteMaxChars",
    "persona",
    "rituals",
    "bindings"
  ],
  "additionalProperties": false,
  "unevaluatedProperties": false,
  "patternProperties": {
    "^x-": {
      "type": ["string", "number", "boolean", "object", "array", "null"]
    }
  },
  "properties": {
    "$schema": { "type": "string" },
    "id": { "type": "string", "minLength": 3 },
    "version": { "type": "string", "pattern": "^v?[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "quoteMaxChars": { "type": "integer", "minimum": 1, "maximum": 150 },
    "persona": { "$ref": "nova.protocol.schema.json#/$defs/persona" },
    "rituals": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "nova.protocol.schema.json#/$defs/ritual" }
    },
    "bindings": {
      "type": "object",
      "required": ["IMemoryCompressor"],
      "additionalProperties": false,
      "properties": {
        "IMemoryCompressor": { "type": "string" },
        "IRetriever": { "type": ["string", "null"] }
      }
    },
    "preferences": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "language": { "type": "string", "pattern": "^[a-z]{2}(?:-[A-Z]{2})?$" },
        "timezone": { "type": "string", "pattern": "^[A-Za-z_]+\/[A-Za-z_]+(?:\/[A-Za-z_]+)?$" },
        "audienceFocus": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "telemetry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "analyticsId": { "type": ["string", "null"] },
        "dataResidency": {
          "type": ["string", "null"],
          "pattern": "^[A-Z]{2}(?:-[A-Za-z]+)?(?:,\s?[A-Z]{2}(?:-[A-Za-z]+)?)*$"
        }
      }
    }
  }
}
