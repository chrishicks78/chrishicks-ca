{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chrishicks.ca/schemas/nova.instance.schema.json",
  "title": "NOVA Instance Configuration",
  "type": "object",
  "required": [
    "id",
    "version",
    "name",
    "description",
    "quoteMaxChars",
    "persona",
    "rituals",
    "bindings"
  ],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 3 },
    "version": { "type": "string", "pattern": "^v?[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "quoteMaxChars": { "type": "integer", "minimum": 1, "maximum": 150 },
    "persona": { "$ref": "https://chrishicks.ca/schemas/nova.protocol.schema.json#$defs/persona" },
    "rituals": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "https://chrishicks.ca/schemas/nova.protocol.schema.json#$defs/ritual" }
    },
    "bindings": {
      "type": "object",
      "required": ["IMemoryCompressor"],
      "additionalProperties": false,
      "properties": {
        "IMemoryCompressor": { "type": "string" },
        "IRetriever": { "type": ["string", "null"] }
      }
    },
    "preferences": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "language": { "type": "string" },
        "timezone": { "type": "string" },
        "audienceFocus": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },
    "telemetry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "analyticsId": { "type": ["string", "null"] }
      }
    }
  }
}
